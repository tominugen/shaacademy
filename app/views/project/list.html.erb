<h1>Minha página de cursos</h1>

<div class="row"  data-no-turbolink>
<br/>

	<% if @projects.count > 0 %>

		<% @projects.each do |project| %>
			<%= link_to project do %>
				<div class="col s12 m6 l4">
					<div class="card">

						<div class="card-image">
							<%= image_tag project.image %>
						</div>

						<div class="card-content" style="height: 6em">
							<span class="card-title grey-text text-darken-4">
								<%= project.shortname %>
							</span>
						</div>

					</div>
				</div>
			<% end %>
		<% end %>
	<% else %>
		<div class="center">
			<h5 class="center">Você não tem nenhuma Curso ainda!</h5>
			<%= link_to "Leve me para os cursos", '/project', class: "btn btn-primary" %>
		</div>
	<% end %>

</div>
